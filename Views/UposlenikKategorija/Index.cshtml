@model IEnumerable<VP.Models.UposlenikKategorija>

@{
    ViewData["Title"] = "Kategorije uposlenika";
}

<h1>Kategorije uposlenika</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID kategorije
            </th>
            <th>
               ID uposlenika
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdKategorijeNavigation.IdKategorije)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUposlenikNavigation.IdUposlenik)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
