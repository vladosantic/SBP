@model IEnumerable<VP.Models.Vozilo>

@{
    ViewData["Title"] = "Vozila";
}

<h1>Vozila</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary" fdprocessedid="j5k4t7">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-secondary">
            <th>
                Broj šasije
            </th>
            <th>
                Registracijska oznaka
            </th>
            <th>
                Godina proizvodnje
            </th>
            <th>
                Gorivo
            </th>
            <th>
                Kategorija
            </th>
            <th>
                ID lokacije
            </th>
            <th>
                Model vozila
            </th>
            <th>
                Vrsta vozila
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrojSasije)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistracijskaOznaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GodinaProizvodnje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gorivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLokacijeNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelVozilaNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VrstaVozilaNavigation.VrstaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVozila" class="btn btn-outline-success" fdprocessedid="oaubug">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.IdVozila" class="btn btn-outline-warning" fdprocessedid="0i8oo">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.IdVozila" class="btn btn-outline-danger" fdprocessedid="z0p2rq">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
