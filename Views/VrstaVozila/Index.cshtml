@model IEnumerable<VP.Models.VrstaVozila>

@{
    ViewData["Title"] = "Vrsta vozila";
}

<h1>Vrste vozila</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Naziv
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VrstaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VrstaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VrstaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
